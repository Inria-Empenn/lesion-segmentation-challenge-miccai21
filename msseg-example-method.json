{
    "name": "MSSeg example method",
    "description": "Detect new MS lesions from two FLAIR images.",
    "author": "Arthur Masson",
    "tool-version": "v0.1.3",
    "schema-version": "0.5",
    "command-line": "python process.py -t1 [FLAIR1] -t2 [FLAIR2] -o [SEGMENTATION]",
    "container-image": {
        "image": "arthurmassoninria/msseg-example:latest",
        "index": "hub.docker.com",
        "type": "docker",
        "container-opts": [
            "--gpus",
            "all"
        ]
    },
    "inputs": [
        {
            "id": "flair_time01",
            "name": "The first flair image (e.g. flair_time01.nii.gz)",
            "optional": false,
            "type": "File",
            "value-key": "[FLAIR1]"
        },
        {
            "id": "flair_time02",
            "name": "The second flair image (e.g. flair_time02.nii.gz)",
            "optional": false,
            "type": "File",
            "value-key": "[FLAIR2]"
        },
        {
            "id": "output_segmentation",
            "name": "The output segmentation path (e.g. segmentation.nii.gz)",
            "optional": false,
            "type": "File",
            "value-key": "[SEGMENTATION]"
        }
    ],
    "output-files": [
        {
            "id": "segmentation",
            "name": "The segmentation output",
            "optional": false,
            "path-template": "[SEGMENTATION]"
        }
    ],
    "tags": {
        "purpose": "test MSSeg example method",
        "status": "example"
    },
    "suggested-resources": {
        "cpu-cores": 1,
        "ram": 1,
        "walltime-estimate": 60
    },
    "error-codes": [
        {
            "code": 1,
            "description": "Crashed"
        }
    ],
    "doi": "10.5281/zenodo.4767416"
}